<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arps.imean.MeaningDisplay"
    android:background="#2F4F4F">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="289dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/meaningTextView"
                android:layout_gravity="left|top"
                android:maxLines = "35"
                android:scrollbars = "vertical"
                android:background="#FFFAFA" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addLabelEditText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="68dp"
                android:layout_gravity="center_horizontal|bottom" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/addLabelButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#90EE90"
                android:layout_gravity="center_horizontal|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter label to store the word"
                android:id="@+id/addLabelMessage"
                android:layout_above="@+id/addLabelEditText"
                android:layout_centerHorizontal="true"
                android:textColor="#90EE90"
                android:layout_gravity="center_horizontal|top" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
